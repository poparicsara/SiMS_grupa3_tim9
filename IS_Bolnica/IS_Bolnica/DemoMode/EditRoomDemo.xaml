        xmlns:local="clr-namespace:IS_Bolnica.DemoMode"
        mc:Ignorable="d"
        Title="EditDemo" Height="655" Width="700" WindowStartupLocation="CenterScreen" Closing="ClosingWindow">
    <Grid>
        <Label Content="Broj sobe:" HorizontalAlignment="Left" Margin="122,130,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.684,1.986" Width="109" FontSize="16"/>
        <Label Content="Bolničko odeljenje:" HorizontalAlignment="Left" Margin="122,202,0,0" VerticalAlignment="Top" Width="142" RenderTransformOrigin="0.844,0.528" FontSize="16"/>
        <Label Content="Namena:" HorizontalAlignment="Left" Margin="122,268,0,0" VerticalAlignment="Top" Width="109" RenderTransformOrigin="3.673,3.075" FontSize="16"/>
        <TextBox x:Name="idBox" IsTabStop="True"  HorizontalAlignment="Left" Height="32" Margin="377,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="16" />
        <ComboBox Name="wardBox" IsTabStop="True" Height="32"  HorizontalAlignment="Left" Margin="377,207,0,0" VerticalAlignment="Top" Width="220" FontSize="16"/>
        <ComboBox Name="purposeBox" IsTabStop="True" Height="32"  HorizontalAlignment="Left" Margin="377,272,0,0" VerticalAlignment="Top" Width="220" FontSize="16"/>
