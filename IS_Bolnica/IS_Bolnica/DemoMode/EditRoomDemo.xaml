        <Label Content="IZMENA INFORMACIJA O PROSTORIJI" HorizontalAlignment="Left" Margin="113,35,0,0" VerticalAlignment="Top" FontSize="26" FontWeight="Bold" FontFamily="Ebrima" Foreground="Black" Width="484"/>
    </Grid>
</Window>
