<Page x:Class="IS_Bolnica.GUI.Patient.View.EvaluationsForAppointments"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IS_Bolnica.PatientPages"
      mc:Ignorable="d" 
      d:DesignHeight="470" d:DesignWidth="689"
      Title="EvaluationsForAppointments">

    <Grid>
        <Frame NavigationUIVisibility="Hidden" Height="470" VerticalAlignment="Top" Margin="1,0,-0.2,0" Name="StartFrame" HorizontalAlignment="Left" Width="689"/>
        <Button Command="{Binding Path=BackButtonCommand}"  Margin="549,33,22.8,390.4" Background="white" >
            <StackPanel Orientation="Horizontal">
                <Image Source="/PatientPages/back.png" Stretch="Fill" Height="30" Width="36" />
                <Label Content="Back" FontSize="16" HorizontalAlignment="Left" Height="27" VerticalAlignment="Top" Width="48"/>
            </StackPanel>
        </Button>
        <DataGrid AutoGenerateColumns="False" 
          Height="258" 
          Width="621"
          ColumnHeaderHeight="30"
          ColumnWidth="141.2"
          FontSize="15"
          HorizontalAlignment="Center" 
          Name="EvaluationsOfAppointmentsDataBinding" 
          IsReadOnly="True"
          VerticalAlignment="Center" Margin="45,173,22.8,39.4"
                  ItemsSource="{Binding Path=PatientEvaluations}">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="#FF4E8E73"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ime(lekara)" Binding="{ Binding Doctor.Name}" />
                <DataGridTextColumn Header="Prezime(lekara)" Binding="{ Binding Doctor.Surname}" />
                <DataGridTextColumn Header="Ocena" Binding="{ Binding Assessment}" />
                <DataGridTextColumn Width="197.4"  Header="Komentar" Binding="{ Binding Comment }" />
            </DataGrid.Columns>

        </DataGrid>
        <Label Content="Vaše ocene dosadašnjih pregleda" FontSize="26" HorizontalAlignment="Left" Height="54" Margin="134,60,0,0" VerticalAlignment="Top" Width="392"/>
        <Image Source="/PatientPages/nasLogo.jpg" Stretch="Fill" Margin="24,10,609.8,404.4"/>
        <Label Content="Zdravo bolnica" HorizontalAlignment="Left" Height="27" Margin="10,66,0,0" VerticalAlignment="Top" Width="96"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="33" VerticalAlignment="Top" Width="196" Margin="45,140,0,0" >
            <Image Source="/PatientPages/search.jpg" Stretch="Fill" Height="33" Width="46"  Margin="0,0,0,-0.2"  />
            <TextBox KeyUp="SearchKeyUp" FontSize="20" Margin="0,0,0,-0.2" Width="150" Name="SearchBox"
                     Text="{Binding Path=SearchText,Mode=OneWayToSource}"
                     >
                <TextBox.InputBindings>
                    <KeyBinding Command="{Binding Path=SearchCommand}" CommandParameter="{Binding ElementName=EvaluationsOfAppointmentsDataBinding}" Key="Enter" />
                </TextBox.InputBindings>
            </TextBox>
        </StackPanel>
    </Grid>
</Page>
