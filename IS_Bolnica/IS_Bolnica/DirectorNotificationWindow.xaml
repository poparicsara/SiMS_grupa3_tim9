<Window x:Class="IS_Bolnica.DirectorNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IS_Bolnica"
        mc:Ignorable="d"
        Title="DirectorNotificationWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid x:Name="NotificationList" ItemsSource="{Binding Path=Notifications}" AutoGenerateColumns="False" SelectionMode="Single" 
                  IsReadOnly="True" HorizontalAlignment="Stretch" Margin="10,37,9.6,10" VerticalAlignment="Stretch"
                  GridLinesVisibility="Vertical">
            <DataGrid.Resources>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClik"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="NASLOV" Binding="{Binding title}" Width="400"/>
                <DataGridTextColumn Header="POŠILJALAC" Binding="{Binding Sender}" Width="550"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
