<Window x:Class="IS_Bolnica.AddMedicamentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IS_Bolnica"
        mc:Ignorable="d"
        Title="AddMedicamentWindow" Height="450" Width="800" Closing="ClosingWindow">
    <Grid Margin="0,0,-0.4,0">
        <TextBox x:Name="idBox" HorizontalAlignment="Left" Height="23" Margin="267,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Šifra:" HorizontalAlignment="Left" Margin="131,58,0,0" VerticalAlignment="Top"/>
        <Label Content="Naziv:" HorizontalAlignment="Left" Margin="125,113,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nameBox" HorizontalAlignment="Left" Height="23" Margin="267,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Zamenski lek:" HorizontalAlignment="Left" Margin="125,169,0,0" VerticalAlignment="Top"/>
        <Label Content="Proizvođač:" HorizontalAlignment="Left" Margin="125,209,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="producerBox" HorizontalAlignment="Left" Height="23" Margin="267,214,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="toBox" HorizontalAlignment="Left" Margin="267,262,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem>
                DOKTOR
            </ComboBoxItem>
        </ComboBox>
        <Button Content="ODUSTANI" HorizontalAlignment="Left" Margin="542,355,0,0" VerticalAlignment="Top" 
                Width="81" Height="24" FontFamily="Ebrima" FontWeight="Bold" Background="#FF15285D" Foreground="White" 
                BorderBrush="#FF425431"/>
        <Button Content="POŠALJI ZAHTEV" HorizontalAlignment="Left" Margin="656,355,0,0" VerticalAlignment="Top"
                Width="114" Height="24" FontFamily="Ebrima" FontWeight="Bold" Background="#FF15285D" Foreground="White" 
                BorderBrush="#FF425431" Click="DoneButtonClicked"/>
        <Label Content="Primalac:" HorizontalAlignment="Left" Margin="125,259,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="replacementBox" HorizontalAlignment="Left" Margin="267,169,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ReplacementComboBoxSelectionChanged"/>
        <TextBox x:Name="ingredientBox" HorizontalAlignment="Left" Height="202" Margin="542,62,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Top" Width="173"/>
        <Label Content="Sastav:" HorizontalAlignment="Left" Margin="483,62,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
